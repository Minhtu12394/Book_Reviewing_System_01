<%= form_for @request do |f| %>
  <%= render "shared/error_messages", object: f.object %>

  <%= f.label :name_book %>
  <%= f.text_field :name_book, class: "form-control" %><br>

  <%= f.label :content %>
  <%= f.text_area :content, class: "form-control" %> <br>

  <%= f.submit yield(:button_text), class: "btn btn-primary" %>
<% end %>
