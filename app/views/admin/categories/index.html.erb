<center>
  <h1><%= t "category.admin_cat" %></h1>
</center>
<div class="col-md-12">
  <%= form_tag admin_categories_path, method: :get do %>
    <div class="col-md-6 col-md-offset-3">
      <%= text_field_tag "txt_filter_cat", nil, class: "form-control txt_filter_book", placeholder: (t "type_something"), id: "txt_filter_cat" %>
    </div>
  <% end %> <br>
  <table class="table table-hover">
    <thead>
      <tr>
        <th scope="col" class="text-center">#</th>      
        <th scope="col"><%= t "category.title" %></th>
        <th scope="col"> <%= t "category.description" %> </th>
        <th scope="col" class="text-center">
          <%= link_to "+", new_admin_category_path, class: "btn btn-success", remote: true %>
        </th>
      </tr>
    </thead>
    <tbody class="table-categories">
      <%= render @categories %>
    </tbody>
  </table>
</div>
