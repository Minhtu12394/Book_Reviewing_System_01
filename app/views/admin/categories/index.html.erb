<center>
  <h1><%= t "category.admin_cat" %></h1>
</center>
<div class="col-md-12">
  <table class="table table-hover">
    <thead>
      <tr>
        <th scope="col" class="text-center">#</th>      
        <th scope="col"><%= t "category.title" %></th>
        <th scope="col"> <%= t "category.description" %> </th>
        <th scope="col" class="text-center">
          <%= link_to "+", new_admin_category_path, class: "btn btn-success", remote: true %>
        </th>
      </tr>
    </thead>
    <tbody>
      <%= render @categories %>
    </tbody>
  </table>
</div>
