<%= form_for [@book, @rating] do |f| %>
  <%= render "shared/error_messages", object: f.object %>

  <div class="form-group">
    <label><%= t "ratings.rating_this_book" %></label>
    <%= f.hidden_field :poin, class: "form-control" %>
    <div class="area-rate">
      <%= render "shared/rating_star" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :content %>
    <%= f.text_area :content, class: "form-control", rows: 20 %>
  </div>

  <%= f.submit (t "users.new.create"), class: "btn btn-primary" %> </br>
<% end %>
