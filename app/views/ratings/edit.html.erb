<center>
  <h1><%= t "review.review" %></h1>
</center>
<div class="col-md-8">
  <%= form_for [@book, @rating] do |f| %>
    <%= render "shared/error_messages", object: f.object %>

    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :content %>
      <%= f.text_area :content, class: "form-control", rows: 20 %>
    </div>

    <%= f.submit (t "users.new.create"), class: "btn btn-primary" %> </br>
  <% end %>
</div>

