<% if verify_like(history).nil? %>
  <%= form_for current_user.likes.build do |f| %>
    <%= hidden_field_tag :history_id, history.id  %>
    <%= f.submit (t "like.like"), class: "btn btn-success", "data-like_activity": history.id  %>
  <% end %>
<% else %>
  <%= form_for current_user.likes.find_by(history_id: history.id),
    method: :delete do |f| %>
    <%= hidden_field_tag :history_id, history.id  %>
    <%= f.submit (t "like.unlike"), class: "btn btn-danger", "data-like_activity": history.id %>
  <% end %>
<% end %>
