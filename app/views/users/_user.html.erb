<div class="col-md-6 area-user">
<div class="content">
  <div class="col-md-3">
    <% if !user.avatar.thumb.url.nil? %>
      <%= link_to image_tag user.avatar.thumb.url, class: "img-avatar", style: "width: 65px" %><br>
    <% else %>
      <%= link_to (image_tag "avatar-default.png", class: "img-avatar", style: "width: 65px") %>
    <% end %>
  </div>
  <div class="col-md-6">
    <%= link_to user.name, user %>
  </div>
</div>
</div>
